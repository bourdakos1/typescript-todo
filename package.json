    "copyfiles": "^2.3.0",
    "eslint": "^7.1.0",
    "eslint-plugin-openapi": "^0.0.3",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "openapi-comment-parser": "^0.3.2",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.1.0"
